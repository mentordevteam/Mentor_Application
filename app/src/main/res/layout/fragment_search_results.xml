<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mentor.mentor.Fragment_search_results"
    android:background="#efeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:scrollHorizontally="false"
        android:background="@android:color/white"
        android:id="@+id/edit_text_layout"
        android:gravity="top|center_horizontal">
        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5sp"
            android:id="@+id/image_view_sandwich_button"
            android:layout_marginStart="5sp">
            <ImageButton
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_sandwich_icon"
                android:contentDescription="@string/search_here"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"/>
        </RelativeLayout>
        <EditText
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_search"
            android:hint="@string/search_here"
            android:textColorHint="@android:color/background_dark"
            android:layout_gravity="center"
            android:layout_weight="7" />
        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/image_view_search_button"
            android:layout_marginRight="5sp"
            android:layout_marginEnd="5sp">
            <ImageButton
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_search_icon"
                android:contentDescription="@string/search_here"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_layout"
        android:orientation="horizontal"
        android:layout_alignStart="@+id/edit_text_layout"
        android:layout_alignLeft="@+id/edit_text_layout"
        android:layout_alignRight="@+id/edit_text_layout"
        android:layout_alignEnd="@+id/edit_text_layout"
        android:background="@android:color/white"
        android:padding="5sp">
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/showing_results_for"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:id="@+id/text_view_search_result_show"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>
